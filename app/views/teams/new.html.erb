<% if @team.errors.any? %>
<%= @team.errors.full_messages.to_sentence %>
<% end %>

<%= form_for @team do |t| %>
  <%= t.label "Team Name:"%>
  <%= t.text_field :name %><br>
  <%= t.label "Choose Three Characters to make your MTG Challenge Team!" %><br>
    <%= t.collection_check_boxes :character_ids, Character.all, :id, :name do |b|%>
      <%= b.label %>
      <%= b.check_box %><br>
    <% end %>
    <%= t.submit "Collaborate!" %>
<% end %>
