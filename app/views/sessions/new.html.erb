<% if flash[:message] %>
<%= flash[:message] %>
<% end %>

<h1>welcome back! Log In:</h1>
<%= form_for @user, url: login_path, method: :post do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <label>Password:</label>
  <%= password_field_tag :password %>

  <%= f.submit "Log In" %><br>

  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
<% end %>
