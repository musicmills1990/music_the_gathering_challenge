<% if @user.errors.any? %>
<%= @user.errors.full_messages.to_sentence %>
<% end %>

<h2>Sign Up</h2>
<%= form_for @user do |f| %>

<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :email %>
<%= f.text_field :email %><br>

<%= f.label :password %>
<%= f.password_field :password %><br>

<label>Music Mana (give yourself as much as you want, you'll need it to play the game and it's free!)</label>
<%= f.text_field :music_mana, :placeholder => "Start with 1000" %><br>

<%= f.submit 'Start Your Adventure!'%>

<% end %>
